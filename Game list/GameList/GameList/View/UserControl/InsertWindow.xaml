<Window x:Class="GameList.View.UserControl.InsertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameList.View.UserControl"
        xmlns:user="clr-namespace:GameList.View.UserControl"
        mc:Ignorable="d"
        Title="InsertWindow" Height="600" Width="300">
    <Grid Background="#1e1e2e">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Insert game" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontFamily="Consolas"
                   FontSize="35" Foreground="AliceBlue">
        </TextBlock>

        <user:InputField Grid.Row="1" Placeholder="Title"></user:InputField>
        <user:InputField Grid.Row="2" Placeholder="Genre"></user:InputField>
        <user:InputField Grid.Row="3" Placeholder="Platform"></user:InputField>
        <user:InputField Grid.Row="4" Placeholder="Release date"></user:InputField>
        <user:InputField Grid.Row="5" Placeholder="Release date"></user:InputField>
        <user:InputField Grid.Row="6" Placeholder="Completed"></user:InputField>
        <user:InputField Grid.Row="7" Placeholder="Rating"></user:InputField>

        <Button Style="{DynamicResource RoundedButtonStyle}" Content="Insert" FontSize="30" 
                FontFamily="Consolas" Background="AliceBlue" Foreground="#1e1e2e" 
                BorderThickness="0" MinWidth="120" Grid.Row="8"
                Click="InsertGame_Click">
        </Button>

    </Grid>
</Window>
