<UserControl x:Class="GameList.View.UserControl.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameList.View.UserControl"
             mc:Ignorable="d" 
             Height="100" d:DesignWidth="800">
    <Grid Background="#1e1e2e ">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Stroke="AliceBlue"></Rectangle>
        <Rectangle Grid.Column="1" Stroke="AliceBlue"></Rectangle>

        <TextBlock Grid.Column="0" Text="Actions" Foreground="AliceBlue"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="60" FontWeight="Light" FontFamily="Consolas">
        </TextBlock>
        <TextBlock Grid.Column="1" Text="Games view" Foreground="AliceBlue"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="60" FontWeight="Light" FontFamily="Consolas">
        </TextBlock>

    </Grid>

</UserControl>
